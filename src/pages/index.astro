---
import Layout from '../layouts/Layout.astro';
import { format } from 'date-fns';
import '../styles/global.css';

// This would be replaced with actual data fetching from the content collection
const talks = [
  {
    title: "Building Beautiful Flutter Apps",
    event: "FlutterCon USA 2024",
    date: "2024-03-15",
    year: "2024",
    tags: ["UI", "Design", "Flutter"],
    thumbnail: "/images/talks/placeholder.jpg",
    videoUrl: "https://youtube.com/watch?v=example",
    description: "Learn how to create stunning Flutter applications with modern design principles."
  }
];
---

<Layout title="Flutter Talks Collection">
  <div class="space-y-8">
    <div class="text-center py-10">
      <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-2 drop-shadow">The Best Flutter Talks of 2024 ✨</h1>
      <p class="text-lg md:text-xl text-blue-100 mb-6">Discover, share, and celebrate the best Flutter talks from around the world.</p>
      <a href="/contribute" class="inline-block px-6 py-2 bg-white text-purple-800 font-bold rounded-full shadow hover:bg-blue-100 transition">Submit a Talk</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {talks.map((talk) => (
        <article class="bg-white/90 rounded-2xl shadow-lg overflow-hidden hover:scale-105 hover:shadow-2xl transition-transform duration-200 border border-white/20">
          <a href={talk.videoUrl} target="_blank" rel="noopener noreferrer" class="block">
            <img
              src={talk.thumbnail}
              alt={talk.title}
              class="w-full aspect-video object-cover bg-gray-200"
            />
            <div class="p-4">
              <h2 class="text-lg font-bold text-purple-900 mb-1">{talk.title}</h2>
              <p class="text-xs text-blue-700 mb-1">{talk.event}</p>
              <p class="text-xs text-gray-500 mb-2">{format(new Date(talk.date), 'MMMM d, yyyy')}</p>
              <div class="flex flex-wrap gap-2 mb-2">
                {talk.tags.map((tag) => (
                  <span class="px-2 py-0.5 bg-purple-100 text-purple-700 text-xs rounded-full font-semibold">{tag}</span>
                ))}
              </div>
              <p class="text-xs text-gray-700">{talk.description}</p>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
  <footer class="bg-blue-950 text-blue-100 py-6 mt-12">
    <div class="max-w-7xl mx-auto text-center text-sm">
      © {new Date().getFullYear()} Flutter Talks. Made with ❤️ by the Flutter community.
    </div>
  </footer>
</Layout>
